@model  IEnumerable<NongSan.Models.SanPham>
@{
    ViewBag.Title = "SanPhamTheoDanhMuc";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var alldanhmuc = (List<NongSan.Models.DanhMucSanPham>)ViewBag.ListDanhMuc;
    var totalpage = ViewBag.Count;
    //var sanphamtheodanhmuc = (List<NongSan.Models.SanPham>)ViewBag.ListSanPhamTheoDanhMuc;
}
<div class="organic_food_wrapper">
    <!--- shop_wrapper area  -->
    <div class="shop_wrapper ptb-90">
        <div class="container-fluid">
            <div class="row">
                <!--- sibar_wrapper area  -->
                <div class="col-lg-3 col-md-8 col-12">
                    <div class="shop_sidebar">
                        <div class="block_categories">
                            <div class="category_top_menu widget">
                                <div class="widget_title">
                                    <h3>categories</h3>
                                </div>
                                <ul class="shop_toggle">
                                    @foreach (var item in alldanhmuc)
                                    {

                                        <li data-danhmuc="@item.IDDanhMuc">
                                            <a href="#">@item.TenDanhMuc</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                        @*<div class="search_filters_wrapper">
            <div class="price_filter widget">
                <div class="widget_title">
                    <h3>filter By price</h3>
                </div>
                <div class="search_filters widget">
                    <div id="slider-range"></div>
                    <input type="text" name="text" id="amount" />
                </div>
            </div>
        </div>*@
                    </div>
                </div>
                <!--- sibar_wrapper area  -->
                <div class="col-lg-9 col-md-12 col-12">
                    <!--- short_wrapper area  -->
                    <div class="categories_banner">
                        <div class="categories_banner_inner">
                            <img src="assets/img/banner/shop.jpg" alt="">
                        </div>
                        <h3>SHOP</h3>
                    </div>
                    <div class="tav_menu_wrapper">
                        <div class="row align-items-center">
                            <div class="col-lg-6 col-md-7 col-sm-6">
                                <div class="tab_menu shop_menu">
                                    <div class="tab_menu_inner">
                                        <ul class="nav" role="tablist">
                                            <li><a class="active" data-toggle="tab" href="#shop_active" role="tab" aria-controls="shop_active" aria-selected="true"><i class="fa fa-th" aria-hidden="true"></i></a></li>

                                            <li><a data-toggle="tab" href="#featured_active" role="tab" aria-controls="featured_active" aria-selected="false"><i class="fa fa-list" aria-hidden="true"></i></a></li>
                                        </ul>
                                    </div>
                                    @*<div class="tab_menu_right">
            <p>There are 14 products.</p>
        </div>*@
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-5 col-sm-6">
                                <div class="Relevance">
                                    <span>Sort by:</span>
                                    <div class="dropdown dropdown-shop">
                                        <select name="drop" id="dropdown">
                                            <option value="1">Relevance</option>
                                            <option value="2">Name, A to Z</option>
                                            <option value="2">Name, Z to A</option>
                                            <option value="2">Price, low to high</option>
                                            <option value="2">Price, high to low</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--- short_wrapper area  -->
                    <div id="shop_content">
                        <div class="tab_product_wrapper">
                            <div class="tab-content">
                                <!--- shop grid start-->
                                <div class="tab-pane fade show active" id="shop_active">
                                    <div class="row">
                                        @foreach (var item in @Model)
                                        {
                                            var url = "/chi-tiet-san-pham-" + item.IDSanPham;
                                            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                                                <div class="single__product">
                                                    <div class="single_product__inner">
                                                        <span class="new_badge">Organic</span>
                                                        <span class="discount_price">sale</span>
                                                        <div class="product_img">
                                                            <a href="@url">
                                                                <img src="~/assets/img/product/@item.Hinh" alt="">
                                                            </a>
                                                        </div>
                                                        <div class="product__content text-center">
                                                            <div class="produc_desc_info">
                                                                <div class="product_title">
                                                                    <h4><a href="@url">@item.TenSanPham</a></h4>
                                                                </div>
                                                                <div class="product_price">
                                                                    <p>@string.Format("{0:n0}", @item.GiaKhuyenMai) VND</p>
                                                                </div>
                                                            </div>
                                                            <div class="product__hover">
                                                                <ul>
                                                                    <li><a href="#"><i class="ion-android-cart"></i></a></li>
                                                                    @*<li><a class="cart-fore" href="#" data-toggle="modal" data-target="#my_modal" title="Quick View"><i class="ion-android-open"></i></a></li>*@

                                                                    <li><a href="@url"><i class="ion-clipboard"></i></a></li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <!--- shop grid end -->
                            </div>

                            <div class="shop_pagination">
                                <div class="row align-items-center">
                                    <div class="col-lg-4 col-md-6 col-sm-6">
                                        @*<div class="total_item_shop">
            Showing 13-14 of 14 item(s)
        </div>*@
                                    </div>
                                    <div class="col-lg-6 offset-lg-2 col-md-6 col-sm-6">
                                        <div class="page_list_clearfix text-center">
                                            <ul>
                                                <li class="prev"><a href="#"><i class="zmdi zmdi-chevron-left"></i> Previous</a></li>
                                                @for (var i = 1; i <= totalpage; i++)
                                                {
                                                    var active = string.Empty;
                                                    if (i == 1)
                                                    { active = "current_page"; }

                                                    <li class="page-item @active">
                                                        <a href="#" data-page="@i">@i</a>
                                                    </li>

                                                }
                                                <li class="next"><a href="#" data-max-page="@totalpage"> Next <i class="zmdi zmdi-chevron-right"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--- shop_wrapper area end  -->
</div>

<!--organicfood wrapper end-->
