(function ($) {
    "use strict";

    $("#FormAddCategory").submit(function (e) {
        alert("Them danh muc");
        $.ajax(
            {
                url: "/Category/Add",
                data: $(this).serialize(),
                dataType: "text",
                type: "POST",
                success: function (response) {
                    $(".message").html(response);
                },
                error: function (xhr, status, errMess) {
                    $(".message").text("Có lỗi:" + errMess);
                }
            });
        e.preventDefault();
    });

    $("#btnClose").click(function (e) {
